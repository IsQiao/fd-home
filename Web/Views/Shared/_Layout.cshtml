<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
    <script src="lib/jquery/dist/jquery.min.js"></script>
    <script src="lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="js/site.js"></script>
</head>
<body>
<div class="bg-white bg-white border-bottom">
    <div class="blog-header d-flex align-items-center container">
        <div class="blog-header-logo">
            <img src="~/images/logo.png"></img>
        </div>
        <div class="blog-header-right ml-md-auto">
            <ul class="navbar-nav flex-md-row">
                <li class="nav-item px-2">
                    全国服务热线：400-123-234-345
                </li>|
                <li class="nav-item px-2">
                    收藏本站
                </li>|
                <li class="nav-item px-2">
                    网站地图
                </li>
            </ul>
        </div>
    </div>
</div>
<div id="navbarMain" class="  sticky-top">
    <div class="container">
        <ul class="web-nav nav justify-content-end ">
            <li class="nav-item">
                <a class="nav-link active text-light" href="#">网站首页</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light" href="#">关于我们</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light" href="#">新闻动态</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light" href="#">产品中心</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light" href="#">关于我们</a>
            </li>
        </ul>
    </div>
</div>
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel" >
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/img1.jpg" class="d-block w-100" alt="33">
        </div>
        <div class="carousel-item">
            <img src="~/images/img2.jpg" class="d-block w-100" alt="22">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div style="height: 5000px;" class=""></div>

<div>
    <a asp-controller="Home" asp-action="Index">Home</a>
    <a asp-controller="Home" asp-action="Edit">Create Post</a>
    @if (!User.Identity.IsAuthenticated)
    {
        <a asp-controller="Auth" asp-action="Login">Sign In</a>
    }
    else
    {
        <a asp-controller="Auth" asp-action="Logout">LogOut</a>
    }
    <a asp-controller="Panel" asp-action="Index">Admin Panel</a>
</div>
@RenderBody()

</body>
</html>