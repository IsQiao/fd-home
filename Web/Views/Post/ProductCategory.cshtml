@model IEnumerable<PostCategory>
@{
    Layout = "~/Views/Shared/_LayoutWithBanner.cshtml";
    ViewBag.ActiveIndex = 1;
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/">首页</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">产品分类</li>
        </ol>
    </nav>

    <div class="d-flex">
        <img src="~/images/img6.png" class="list-left"/>
        <div class="list-right">
            @foreach (var item in Model)
            {
                <div class="d-flex justify-content-between border-bottom mb-2">
                    <a href="/Post/ProductList?categoryId=@item.Id">@item.Name</a>
                </div>
            }
        </div>
    </div>
</div>