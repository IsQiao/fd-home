@model IEnumerable<PostCategory>
@{
    Layout = "~/Views/Shared/_LayoutWithBanner.cshtml";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/">首页</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">产品分类</li>
        </ol>
    </nav>

    <div>
        @foreach (var item in Model)
        {
            <div class="d-flex justify-content-between border-bottom">
                <a href="/Post/ProductList?categoryId=@item.Id">@item.Name</a>
            </div>
        }
    </div>
</div>