@model  List<PostCategory>
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="breadcrumb-holder">
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/admin">首页</a>
            </li>
            <li class="breadcrumb-item active">内容分类 </li>
        </ul>
    </div>
</div>
<section class="forms">
    <div class="container-fluid">
        <!-- Page Header-->
        <header>
            <h1 class="h3 display">内容分类列表 </h1>
        </header>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header d-flex align-items-center">
                        <h4>
                            <a href="/Admin/PostCategory/Edit">
                                <input type="button" value="新增分类" class="btn btn-primary">
                            </a>
                        </h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>#</th>
                                    <th>类别</th>
                                    <th>名称</th>
                                    <th>操作</th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var postCategory in Model)
                                {
                                    <tr>
                                        <th scope="row">@postCategory.Id</th>
                                        <td>@postCategory.PostType.ToPostTypeDisplayName()</td>
                                        <td>@postCategory.Name</td>
                                        <td>
                                            <a href="/admin/PostCategory/Delete/@postCategory.Id">
                                                <input type="button" value="删除" class="btn btn-primary">
                                            </a>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>