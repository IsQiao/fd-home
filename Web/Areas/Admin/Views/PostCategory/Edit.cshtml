@model PostCategory
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="breadcrumb-holder">
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/admin">首页</a>
            </li>
            <li class="breadcrumb-item active">内容分类 </li>
        </ul>
    </div>
</div>
<section class="forms">
    <div class="container-fluid">
        <!-- Page Header-->
        <header>
            <h1 class="h3 display">新增内容分类 </h1>
        </header>
        <div class="row">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <form id="myForm" method="post" asp-route="/Admin/PostCategory/Edit">
                            <div class="form-group row">
                                <label class="col-sm-2 form-control-label">类别</label>
                                <div class="col-sm-10 ">
                                    <select asp-for="PostType" class="form-control">
                                        <option value="0" selected>新闻</option>
                                        <option value="1">产品</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>名称</label>
                                <input type="text" asp-for="Name" placeholder="请输入内容分类名称" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="button" onclick="formCommit()" value="提交" class="btn btn-primary">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script>
        function formCommit() {
            if(document.getElementsByName("Name")[0].value.trim()==""){
                alert('请将表单补充完整');
                return;
            }
            document.getElementById("myForm").submit();
        }
    </script>
}