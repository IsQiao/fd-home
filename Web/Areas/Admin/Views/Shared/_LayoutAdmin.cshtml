                <a href="/Admin/Home" class="brand-small text-center">
                    <strong>B</strong><strong class="text-primary">D</strong>
                </a>
            </div>
        </div>
        <!-- Sidebar Navigation Menus-->
        <div class="main-menu">
            <h5 class="sidenav-heading">Main</h5>
            <ul id="side-main-menu" class="side-menu list-unstyled">
                <li>
                    <a href="/Admin/Home"> <i class="icon-home"></i>首页</a>
                </li>
                <li>
                    <a href="#exampledropdownDropdown" aria-expanded="false" data-toggle="collapse"> <i class="icon-interface-windows"></i>内容管理</a>
                    <ul id="exampledropdownDropdown" class="collapse list-unstyled ">
                        <li>
                            <a href="#">内容列表</a>
                        </li>
                        <li>
                            <a href="#">新增内容</a>
                        </li>
                    </ul>
                </li>
                <li>
